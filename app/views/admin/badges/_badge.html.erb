<tr>
  <td class = "align-middle">
    <%= content_tag :span, badge.title %>
  </td>
  <td class = "align-middle"><%= badge.rule %></td>
  <td class = "align-middle"><%= badge.value %></td>
  <td class = "align-middle"><%= image_tag badge.img_url, size: 30 %></td>
  <td class = "align-middle"><%= link_to t('item.link.show'), admin_badge_path(badge), class: "btn btn-outline-info btn-sm" %></td>
  <td class = "align-middle">
    <%= link_to t('item.link.edit'), edit_admin_badge_path(badge), class: "btn btn-outline-warning btn-sm " %>
  </td>
  <td class = "align-middle">
    <%= link_to t('item.link.delete'),
                admin_badge_path(badge),
                method: :delete,
                data: { confirm: t('item.popup.confirm') },
                class: "btn btn-outline-danger btn-sm" %>
  </td>
</tr>