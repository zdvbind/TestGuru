  <%= form_with model: [:admin, @badge], local: true do |form| %>
    <%= render 'shared/errors', resource: @badge %>

    <div class="mb-3">
      <%= form.label :title, class: 'form-label' %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :rule, class: 'form-label' %>
      <%= form.select :rule, Badge::RULE_TYPES, {prompt: true}, class: 'form-select' %>
    </div>

    <div class="mb-3">
      <%= form.label :value, class: 'form-label' %>
      <%= form.text_field :value, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :img_url, class: 'form-label' %>
      <%= form.select :img_url, Badge.images, {prompt: true}, class: 'form-select' %>
    </div>

    <div class="mb-3">
      <%= form.submit class: 'btn btn-success'%>
    </div>
  <% end %>
