<div>
  <%= link_to t('item.link.new_badge'), new_admin_badge_path, :class => 'btn btn-secondary m-2'%>
</div>
<%= render 'shared/errors', resource: @badge %>

<div class="row justify-content-center mt-4">
  <div class="col col-md-8">
    <h3><%= t('.header') %> </h3>
    <table class="table caption-top table-hover align-middle mt-3">
      <tbody>
        <tr>
          <th>
            <%= t('.title') %>
          </th>
          <th><%= t('.rule') %></th>
          <th><%= t('.value') %></th>
          <th><%= t('.image') %></th>
          <th colspan="3"><%= t('.actions')%></th>
        </tr>
        <%= render @badges %>
      </tbody>
    </table>
  </div>
</div>
