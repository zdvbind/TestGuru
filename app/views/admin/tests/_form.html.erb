<%= form_with model: [:admin, @test], local: true do |form| %>
  <%= render 'shared/errors', resource: @test %>

  <div class="mb-3">
    <%= form.label :title, class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :level, class: 'form-label' %>
    <%= form.number_field :level, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :category, class: 'form-label' %>
    <%= form.collection_select :category, Category.all,
                               :id, :title, {prompt: true}, class: 'form-select' %>
  </div>

  <div>
    <%= form.label :provided_time, class: 'form-label' %>
    <%= form.number_field :provided_time, class: 'form-control' %>
  </div>

  <p>
    <%= form.label :under_construction%><br>
    <%= t('.positive') %>
    <%= radio_button('test', 'under_construction', true) %>
    <%= t('.negative') %>
    <%= radio_button('test', 'under_construction', false) %>
  </p>

  <div class="mb-3">
    <%= form.submit class: 'btn btn-success'%>
  </div>
<% end %>

