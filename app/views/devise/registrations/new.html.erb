<div class="row justify-content-center mt-3">
  <div class="col col-md-4">
    <h2><%= t('.header')%></h2>
    <div class='card border-primary'>
      <div class='card-body'>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group">
            <p>
              <%= f.label :first_name, t('.first_name') %>
              <%= f.text_field :first_name, class: 'form-control'%>
            </p>

            <p>
              <%= f.label :last_name, t('.last_name') %>
              <%= f.text_field :last_name, class: 'form-control'%>
            </p>

            <p>
              <%= f.label :email, t('.email') %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
            </p>

            <p>
              <%= f.label :password, t('.password') %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", id: "password", class: 'form-control field_password' %>
            </p>

            <p>
              <%= f.label :password_confirmation, t('.password_confirmation') %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", id: "confirm_password", class: 'form-control field_password' %>
            </p>

            <div class="actions">
              <%= f.submit t('item.link.signup'), class: 'btn btn-primary' %>
            </div>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>