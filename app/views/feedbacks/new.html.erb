<div class="container col-12 col-md-8">
<h2><%= t('.title') %></h2>
</div>
<div class="container col-12 col-md-8 border border-info">
  <%= form_with url: feedback_path, local: true do |form |%>
    <div class="mb-3">
      <%= form.label :subj, t('.subj'), class: 'form-label' %>
      <%= form.text_field :subj, class: 'form-control' %>
    </div>
    <div class="mb-3">
      <%= form.label :feedback, t('.message'), class: 'form-label'%>

      <%= form.text_area :feedback, class: 'form-control', rows: 10%>
    </div>
    <div class="mb-3">
      <%= form.submit t('.send'), class: 'btn btn-success'%>
    </div>
  <%end%>
</div>
